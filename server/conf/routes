# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.HomeController.index()
GET     /streamerevents                       controllers.HomeController.streamerevents()

# Language management
GET     /language/:lang             controllers.LanguageController.changeLanguage(lang: String)

# Event management
GET     /events                     controllers.EventController.eventManagement()
POST    /events                     controllers.EventController.createEvent()
GET     /events/:id/stop-votes      controllers.EventController.endEvent(id: Int)
GET     /events/:id/close           controllers.EventController.closeEvent(id: Int)
GET     /events/:id/select-winner   controllers.EventController.selectWinnerForm(id: Int)
POST    /events/:id/select-winner   controllers.EventController.setWinnerAndClose(id: Int)
GET     /events/history             controllers.EventController.eventHistory()
GET     /events/full-form           controllers.EventController.fullEventForm()
GET     /api/polls/recent           controllers.EventController.recentPolls()


# Authentication routes
GET     /login                      controllers.AuthController.login
GET     /authenticate/:provider     controllers.AuthController.authenticate(provider)
GET     /signout                    controllers.AuthController.signOut
GET     /api/user                   controllers.AuthController.userInfo

# User profile routes
GET     /profile/change-alias       controllers.AliasController.showChangeAliasForm()
POST    /profile/change-alias       controllers.AliasController.changeAlias()

# Admin routes (requires admin authorization)
GET     /admin                      controllers.AdminController.adminDashboard()
GET     /rerun/:tournamentId/:challongeMatchID   controllers.AdminController.reRunAnalysis(tournamentId: Long, challongeMatchID: Long)

# Admin Security routes
GET     /admin/security             controllers.AdminSecurityController.securityDashboard()
GET     /admin/security/stats       controllers.AdminSecurityController.viewStats()
GET     /admin/security/blacklist   controllers.AdminSecurityController.viewBlacklist()
POST    /admin/security/block/:ip   controllers.AdminSecurityController.blockIp(ip: String)
POST    /admin/security/unblock/:ip controllers.AdminSecurityController.unblockIp(ip: String)

# Content Creator Channel management routes (admin only)
GET     /admin/content-creators     controllers.ContentCreatorChannelController.index()
GET     /admin/content-creators/create controllers.ContentCreatorChannelController.create()
POST    /admin/content-creators     controllers.ContentCreatorChannelController.store()
POST    /admin/content-creators/:id/toggle controllers.ContentCreatorChannelController.toggleActive(id: Long)


# YouTube Frontend routes
GET     /youtube                    controllers.YoutubeFrontendController.showStreamIdForm()
POST    /youtube/get-chat-id        controllers.YoutubeFrontendController.getLiveChatId()
POST    /youtube/start-monitoring   controllers.YoutubeFrontendController.startMonitoring()
GET     /youtube/stop-monitoring/:id controllers.YoutubeFrontendController.stopMonitoring(id: String)

# YouTube Live Chat monitoring endpoints

# Currency management endpoints
GET     /currency                   controllers.CurrencyController.showCurrencyForm()
POST    /currency                   controllers.CurrencyController.addCurrency()
GET     /currency/:channelId        controllers.CurrencyController.getStreamerBalance(channelId: String)
GET     /currency/streamer/:channelId/users  controllers.CurrencyController.showStreamerToUserForm(channelId: String)
POST    /currency/streamer/:channelId/transfer  controllers.CurrencyController.transferCurrencyToUser(channelId: String)

# User Events routes (requires authentication)
GET     /my-events                  controllers.UserEventsController.userEvents()
POST    /my-events/vote             controllers.UserEventsController.submitVote()
GET     /my-events/join/:eventId    controllers.UserEventsController.joinEvent(eventId: Int)
POST    /my-events/tournament/:tournamentId/register controllers.UserEventsController.registerForTournament(tournamentId: Long)
GET     /my-events/ws               controllers.UserEventsController.eventsUpdates

# Tournament management routes
GET     /tournaments                controllers.TournamentController.showOpenTournaments()
GET     /tournaments/create         controllers.TournamentController.showCreateForm()
POST    /tournaments/create         controllers.TournamentController.createTournament()
POST    /tournaments/:id/start      controllers.TournamentController.startTournament(id: Long)
POST    /tournaments/:id/complete   controllers.TournamentController.completeTournament(id: Long)
POST    /tournaments/:id/cancel     controllers.TournamentController.cancelTournament(id: Long)

# Tournament User routes
# Tournament dashboard functionality merged into UserEventsController.userEvents

# Replay Parser Health Check routes
GET     /replay-parser/health       controllers.ReplayParserHealthController.healthPage()

# Tournament Match File Upload routes (JSON API only)
GET     /match/:tournamentId/:challengeMatchId/upload      controllers.FileUploadController.uploadFormForMatch(tournamentId: Long, challengeMatchId: Long)
GET    /fetchstate/:challongeMatchID/:tournamentId controllers.FileUploadController.fetchState(challongeMatchID: Long, tournamentId: Long)
POST   /updatestate controllers.FileUploadController.updateState()
POST   /remove/:tournamentId/:challongeMatchID/:sessionUUID  controllers.FileUploadController.removeFile(tournamentId: Long, challongeMatchID: Long, sessionUUID: java.util.UUID)
POST   /close/:tournamentId/:challongeMatchID  controllers.MatchResultController.closeMatch(tournamentId: Long, challongeMatchID: Long)
GET     /results/match/:challongeMatchID controllers.MatchResultController.viewResults(challongeMatchID: Long)

# CasualMatches
POST   /casual/close/:casualMatchID  controllers.CasualMatchController.closeMatch(casualMatchID: Long)
GET     /casual controllers.CasualMatchController.viewFindUser()
POST     /casual/create/:rivalID controllers.CasualMatchController.createCasualMatch(rivalID: Long)
GET     /casual/match/:casualMatchID      controllers.CasualMatchController.uploadFormForMatch(casualMatchID: Long)
GET    /casual/fetchstate/:casualMatchID controllers.CasualMatchController.fetchState(casualMatchID: Long)
POST   /casual/updatestate controllers.CasualMatchController.updateState()
POST   /casual/remove/:casualMatchID/:sessionUUID  controllers.CasualMatchController.removeFile(casualMatchID: Long, sessionUUID: java.util.UUID)
GET     /casual/results/:casualMatchID controllers.CasualMatchController.viewResults(casualMatchID: Long)
GET	/admin/casual/rerun/:casualMatchID controllers.CasualMatchController.reRunAnalyticalProcess(casualMatchID: Long)

# Analytical Routes
GET /analytical/upload controllers.AnalyticalUploadController.uploadAnalyticalFile()
POST /analytical/upload controllers.AnalyticalUploadController.updateState()
POST /analytical/setSmurf controllers.AnalyticalUploadController.finalizeSmurf()
GET /analytical/copy/:userId controllers.AnalyticalCopyController.showUserOptions(userId: Long)
POST /analytical/copy/ controllers.AnalyticalCopyController.moveTournamentToAnalytical()

GET /analytical/casual/copy/:userId controllers.AnalyticalCopyCasualController.showUserOptions(userId: Long)
POST /analytical/casual/copy/ controllers.AnalyticalCopyCasualController.moveCasualToAnalytical()
# Stats
GET     /stats/:userId              controllers.EloStatsController.viewStats(userId: Long)
GET     /stats                      controllers.EloStatsController.globalRankings()


# Polls view
GET     /polls                      controllers.PollsViewController.viewPolls()



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
->      /webjars                    webjars.Routes
